<div class="row form">
  <div class="col-lg-12">
    <%= form_for current_user do |f| %>
       <h2>プロフィール画像</h2>
      <div class="form-group file">
        <%= f.file_field :image, class: "form-control floating-label", placeholder: "画像アップロード" %>
      </div>
      <h2>登録情報</h2>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :handle_name, placeholder: "ハンドルネーム", class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :live_in, placeholder: "出身", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :favorite_game, placeholder: "好きなボードゲーム", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary withripple" %>
      </div>
    <% end %>
  </div>
</div>
